extends admin_layout

block content
    header.w3-container
        h1 #{user.tipo} #{user.nome}
    table
        tr
            td
                .w3-margin
                    .profile-pic-container(style="position: relative")
                        if user.profile_pic
                            img.profile-pic(src= user.profile_pic)
                        else
                            img.profile-pic(style="position: relative; overflow: hidden;" src="/uploaded/profile-default.png")
            td(style="width: 90%")
                form.w3-container(id="formUpdateUser", user= user._id, style="width: 100%")
                    table(style="width: 100%")
                        tr 
                            td
                                label.w3-text
                                b Nome
                            td
                                input.w3-input(type='text', name='nome', style='width:40%',value= user.nome, disabled)
                        tr 
                            td
                                label.w3-text
                                    b Endereço de email
                            td
                                input.w3-input(type='text', name='email', style='width:40%',value= user.email, disabled)
                        tr
                            td
                                label.w3-text 
                                    b Sexo
                            td
                                select.w3-select(type='text', name='sexo', style='width:40%', disabled)
                                    if user.sexo == "Masculino"
                                        option(value="Masculino") Masculino
                                        option(value="Feminino") Feminino
                                        option(value="Outro") Outro
                                    else if user.sexo == "Feminino"
                                        option(value="Masculino") Masculino
                                        option(value="Feminino" selected) Feminino
                                        option(value="Outro") Outro
                                    else 
                                        option(value="Masculino") Masculino
                                        option(value="Feminino") Feminino
                                        option(value="Outro"  selected) Outro
                        tr
                            td
                                label.w3-text 
                                    b Tipo de utilizador
                            td
                                select.w3-select(type='text', name='tipo' , style='width:40%', disabled)
                                    if user.tipo == "Músico"
                                        option(value="Músico") Músico 
                                        option(value="Produtor") Produtor
                                    else 
                                        option(value="Músico") Músico 
                                        option(value="Produtor" selected) Produtor
                        tr 
                            td 
                                hr 
                            td 
                                hr
                        tr 
                            td
                                label.w3-text
                                    b Password
                            td
                                input.w3-input(type='password', name='password', style='width:40%',placeholder = 'Nova password', disabled)
                    input.w3-button.myFancyButton.w3-margin.w3-right(type='submit', value='Atualizar', id="buttonUpdateUser", disabled)
                    input.w3-button.myFancyButton.w3-margin.w3-right(type='button', value='Editar', id="buttonEdit")
