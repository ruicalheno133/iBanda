extends admin_layout

block content
    header.w3-container(style="box-shadow: 0px 1px 6px grey")
        h1 Eventos
    .w3-display-bottommiddle(style="overflow: scroll; width: 100%; height: 90%; border: 0px solid grey;")
        .w3-row(style="height: 29%;")
            .w3-col.l3.m6(style="height: 100%;").w3-section
                .w3-card.addEventCard.w3-margin.w3-center.w3-display-container.myFancyButton(onclick="document.getElementById('eventsModal').style.display='block'" style="height: 100%; cursor: pointer;")
                    h1
                        i.fas.fa-plus.w3-display-middle(style="opacity: 0.7;")
            for e in eventos
                .w3-col.l3.m6(style="height: 100%; ").w3-section
                    .w3-card.w3-margin.w3-theme-1.w3-display-container(style="height: 100%;")
                        h4.w3-center(style="box-shadow: 0 3px 8px -4px grey;").w3-theme-4
                                b= e.nome
                                br 
                                b= moment(e.data).format('DD/MM/YYYY')
                        table.w3-margin-left(style="width: 90%;")
                                        tr
                                            td.w3-center
                                                i.fas.fa-info
                                            td= e.descricao 
                                        tr
                                            td.w3-center
                                                i.fas.fa-map-marker-alt
                                            td= e.local
                                        tr
                                            td.w3-center
                                                i.far.fa-clock
                                            td= moment(e.data).format('HH:mm')
                        a(href="/api/events/" + e._id).w3-button.buttonRemoveEvent
                            i.fas.fa-times
    .w3-modal(id="eventsModal")
        .w3-modal-content.w3-theme-4(style="width: 40%").w3-border
            include events_modal


