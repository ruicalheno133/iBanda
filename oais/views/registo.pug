extends all_layout

block content
    .w3-container
        .w3-card-4.w3-display-middle(style="width:50%")
            h3.w3-center.w3-blue-grey Registar Utilizador
            .w3-container
                form.w3-container(action='/processaform', method='POST')
                    h4.w3-center 
                        u Dados de Sessão
                    label.w3-text
                        //b Nome: 
                    input.w3-input.w3-animate-input(type='text', name='nome', style='width:40%',placeholder='Nome')
                    br
                    label.w3-text
                        //b Endereço de email:
                    input.w3-input.w3-animate-input(type='text', name='email', style='width:40%',placeholder='Endereço de email')
                    br
                    label.w3-text
                    //b Password:
                    input.w3-input.w3-animate-input(type='password', name='password', style='width:40%',placeholder='Password')
                    br
                    h4
