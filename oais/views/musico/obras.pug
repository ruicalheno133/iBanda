extends musico_layout

block content
    header.w3-container(style="box-shadow: 0px 1px 6px grey")
        h1 Obras
    .w3-display-bottommiddle(style="overflow: scroll; width: 101%; height: 90%; border: 0px solid grey;")
        input( id="searchObras" type="text" placeholder="Procurar...").w3-input.w3-margin
        table( id="obrasTable").w3-table.w3-table-all
            each o in obras
                tr
                    td
                        .w3-bar
                            .w3-bar-item
                                if o.titulo
                                b
                                    big #{o.titulo} 
                                if o.compositor
                                    |  composto por #{o.compositor}
                                br 
                                | inserida por - #{o.criador}
                    td.w3-display-container
                        .w3-display-right
                            a.w3-margin(href="/musico/obras/" + o._id)
                                i.fas.fa-eye