extends produtor_layout

block content
    header.w3-container
        h1 Produtor #{user.nome}
    form.w3-container(id="formUpdate", user= user._id, style="width: 100%")
        table(style="width: 100%")
            tr 
                td
                    label.w3-text
                    b Nome: 
                td
                    input.w3-input(type='text', name='nome', style='width:40%',placeholder= user.nome, disabled)
            tr 
                td
                    label.w3-text
                        b Endere√ßo de email:
                td
                    input.w3-input(type='text', name='email', style='width:40%',placeholder= user.email, disabled)
            tr 
                td
                    label.w3-text
                        b Password:
                td
                    input.w3-input(type='password', name='password', style='width:40%', disabled)
            tr
                td
                    label.w3-text 
                        b Sexo:
                td
                    select.w3-select(type='text', name='sexo', style='width:40%')
                        if user.sexo == "Masculino"
                            option(value="Masculino") Masculino
                            option(value="Feminino") Feminino
                            option(value="Outro") Outro
                        else if user.sexo == "Feminino"
                            option(value="Masculino") Masculino
                            option(value="Feminino" selected) Feminino
                            option(value="Outro") Outro
                        else 
                            option(value="Masculino") Masculino
                            option(value="Feminino") Feminino
                            option(value="Outro"  selected) Outro
        input.w3-btn.w3-blue-grey.w3-margin.w3-right(type='submit', value='Atualizar', id="buttonUpdate")
        input.w3-btn.w3-blue-grey.w3-margin.w3-right(type='button', value='Editar', id="buttonEdit")
