extends produtor_layout

block content
    header.w3-container(style="box-shadow: 0px 1px 6px grey")
        h1 Produtor #{user.nome}
    br
    table
        tr
            td
                .w3-margin
                    .profile-pic-container(style="position: relative")
                        if user.profile_pic
                            img.profile-pic(src= user.profile_pic)
                        else
                            img.profile-pic(style="position: relative; overflow: hidden;" src="/uploaded/profile-default.png")
                        a(href="#" onclick="document.getElementById('profile-pic-modal').style.display='block'" id="updateProfilePic" uid= user._id)
                            h6 Alterar foto de perfil
            td(style="width: 70%;")
                    form.w3-container(id="formUpdateUser", user= user._id, style="width: 100%")
                        table(style="width: 100%;")
                            tr 
                                td
                                    label.w3-text
                                    b Nome
                                td
                                    input.w3-input(type='text', name='nome', style='width:80%',value= user.nome, disabled)
                            tr 
                                td
                                    label.w3-text
                                        b Endere√ßo de email
                                td
                                    input.w3-input(type='text', name='email', style='width:80%',value= user.email, disabled)
                            tr 
                                td
                                    label.w3-text
                                        b Password
                                td
                                    input.w3-input(type='password', name='password', style='width:80%', placeholder = 'Nova Password',disabled)
                            tr
                                td
                                    label.w3-text 
                                        b Sexo
                                td
                                    select.w3-select(type='text', name='sexo', style='width:80%', disabled)
                                        if user.sexo == "Masculino"
                                            option(value="Masculino") Masculino
                                            option(value="Feminino") Feminino
                                            option(value="Outro") Outro
                                        else if user.sexo == "Feminino"
                                            option(value="Masculino") Masculino
                                            option(value="Feminino" selected) Feminino
                                            option(value="Outro") Outro
                                        else 
                                            option(value="Masculino") Masculino
                                            option(value="Feminino") Feminino
                                            option(value="Outro"  selected) Outro
                        input.w3-btn.w3-blue-grey.w3-margin.w3-right(type='submit', value='Atualizar', id="buttonUpdateUser", disabled)
                        input.w3-btn.w3-blue-grey.w3-margin.w3-right(type='button', value='Editar', id="buttonEdit")
    .w3-modal(id="profile-pic-modal")
        .w3-modal-content.w3-theme-4(style="width: 30%").w3-border
            include perfil_modal