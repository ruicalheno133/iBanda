    .w3-display-bottommiddle(style="overflow: scroll; width: 101%; height: 90%; border: 0px solid grey;")
        table.w3-table.w3-table-all
            each u in users 
                tr(id="tableRow")
                            td
                                .w3-bar
                                    .w3-bar-item
                                        if u.nome
                                            | #{u.nome} 
                                        br     
                                        if u.email
                                            | #{u.email}
